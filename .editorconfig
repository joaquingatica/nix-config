# Editor configuration, see http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 100

[*.{[cm]js,js,jsx,json,nix,sh,tf,tftpl,[cm]ts,ts,tsx,yml,yaml,css,proto,prettierrc}]
indent_size = 2

[*.{md,txt}]
# double whitespace at end of line
# denotes a line break in Markdown
trim_trailing_whitespace = false

[*.md]
indent_size = 2

[{Makefile,**.mk}]
indent_style = tab
